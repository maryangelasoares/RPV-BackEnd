<%- include('../header') %>

  <div class="container">
    <div class="row my-4">
      <div class="col-lg-12"></div>
      <div class="table-responsive">
        <table id="pessoasList" class="table table-striped  text-center my-3">
          <thread>
            <tr class="table-dark">
              <th class="table-light"><a class="nav-link" href="/pessoa/create"> <i class="fas fa-plus me-1"></i> </a>
              </th>
              <th>ID</th>
              <th>Nome</th>
              <th>Idade</th>
              <th>Cidade</th>
              <th> </th>
            </tr>
            <tbody>
              <% if ( pessoas !='' ) { pessoas.forEach((row, index)=> { %>
                <tr class="align-middle">
                  <td>

                  </td>
                  <td>
                    <%= row.id %>
                  </td>
                  <td>
                    <%= row.nome %>
                  </td>
                  <td> R$
                    <%= row.cidade.toFixed(2) %>
                  </td>
                  <td>
                    <a href="pessoa/update/<%= row.id %>" class="text-dark">
                      <i class="fas fa-edit fa-lg mx-1"></i></a>
                    <a href="pessoa/delete/<%= row.id %>" class="text-dark">
                      <i class="fas fa-trash-alt fa-lg mx-1"></i></a>
                  </td>
                </tr>
                <% }) } %>
            </tbody>
          </thread>
        </table>
        <% if ( pessoas =='' ) { %>
          <h1 class="text-center text-secondary mt-5">
            Nenhum Cadastro Encontrada! :(
          </h1>
          <% } %>
      </div>
    </div>
  </div>

<%- include('../footer') %>