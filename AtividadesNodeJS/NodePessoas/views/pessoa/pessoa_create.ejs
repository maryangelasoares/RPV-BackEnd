<%- include('../header') %>

  <div class="container">
    <div class="row">
      <div class="col-lg-6 mx-auto mt-4">
        <div class="card shadow">
          <div class="card-header bg-dark">
            <h3 class="text-light">Adicionar Cadastro</h3>
          </div>
          <div class="card-body p-4">
            <form action="/pessoas" method="POST">
              <div class="mb-3">
                <label for="name" class="col-sm-3 col-form-label col-form-label-lg">Nome:</label>
                <input type="text" name="name" class="form-control form-control-lg" placeholder="Informe o Nome..."
                  required />
              </div>
              <div class="mb-3">
                <label for="idade" class="col-sm-3 col-form-label col-form-label-lg">Idade:</label>
                <input type="number" name="idade" class="form-control form-control-lg"
                  placeholder="Digite sua idade..." required />
              </div>
              <div class="mb-3">
                <label for="city" class="col-sm-3 col-form-label col-form-label-lg">Cidade:</label>
                <input type="text" name="city" class="form-control form-control-lg"
                  placeholder="Digite a Cidade..." required />
              </div>
              <div class="mb-3 d-grid">
                <input type="submit" name="submit" value="Gravar" class="btn btn-dark btn-lg" />
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

<%- include('../footer') %>